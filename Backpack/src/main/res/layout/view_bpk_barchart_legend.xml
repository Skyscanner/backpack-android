<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">


    <net.skyscanner.backpack.badge.BpkBadge
        android:id="@+id/bpk_barchart_legend_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/bpkSpacingSm"
        android:minWidth="@dimen/bpkSpacingXxl"
        app:badgeType="dark" />

    <net.skyscanner.backpack.badge.BpkBadge
        android:id="@+id/bpk_barchart_legend_inactivated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/bpkSpacingSm"
        android:minWidth="@dimen/bpkSpacingXxl"
        app:badgeType="dark" />

    <net.skyscanner.backpack.badge.BpkBadge
        android:id="@+id/bpk_barchart_legend_activated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/bpkSpacingXxl"
        app:badgeType="dark" />

</merge>
