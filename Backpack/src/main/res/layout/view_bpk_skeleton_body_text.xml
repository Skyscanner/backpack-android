<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bpk_skeleton_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bpkSpacingXxl"
    android:orientation="horizontal"
    >
    <View
        android:id="@+id/firstLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/bpkSpacingMd"
        app:flow_horizontalAlign="start"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/secondLine"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/secondLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/bpkSpacingMd"
        app:flow_horizontalAlign="start"
        app:layout_constraintWidth_percent="1"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        app:layout_constraintTop_toBottomOf="@+id/firstLine"
        app:layout_constraintBottom_toTopOf="@+id/thirdLine"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/thirdLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/bpkSpacingMd"
        app:flow_horizontalAlign="start"
        app:layout_constraintWidth_percent="0.57"
        app:layout_constraintTop_toBottomOf="@+id/secondLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
