<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
  android:color="?chipRippleColor">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="?chipColor" />
      <padding
        android:bottom="@dimen/bpkSpacingMd"
        android:left="@dimen/bpkSpacingBase"
        android:right="@dimen/bpkSpacingBase"
        android:top="@dimen/bpkSpacingMd" />

      <corners
        android:bottomLeftRadius="@dimen/bpkBorderRadiusPill"
        android:bottomRightRadius="@dimen/bpkBorderRadiusPill"
        android:topLeftRadius="@dimen/bpkBorderRadiusPill"
        android:topRightRadius="@dimen/bpkBorderRadiusPill" />
    </shape>
  </item>
</ripple>
