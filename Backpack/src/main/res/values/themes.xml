<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BpkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="bpkPrimaryColor">@color/bpkCoreAccent</item>
        <item name="colorPrimary">?attr/bpkPrimaryColor</item>
        <item name="colorPrimaryDark">@color/bpkCorePrimary</item>
        <item name="colorAccent">?attr/bpkPrimaryColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="toolbarStyle">@style/BpkToolbarStyle</item>

        <item name="bpkFontFamilyBase">sans-serif</item>
        <item name="bpkFontFamilyEmphasized">sans-serif-medium</item>
        <item name="bpkFontFamilyBlack">sans-serif-black</item>
        <item name="bpkTextHero1Appearance">@style/bpkTextHero1</item>
        <item name="bpkTextHero2Appearance">@style/bpkTextHero2</item>
        <item name="bpkTextHero3Appearance">@style/bpkTextHero3</item>
        <item name="bpkTextHero4Appearance">@style/bpkTextHero4</item>
        <item name="bpkTextHero5Appearance">@style/bpkTextHero5</item>
        <item name="bpkTextHeading1Appearance">@style/bpkTextHeading1</item>
        <item name="bpkTextHeading2Appearance">@style/bpkTextHeading2</item>
        <item name="bpkTextHeading3Appearance">@style/bpkTextHeading3</item>
        <item name="bpkTextHeading4Appearance">@style/bpkTextHeading4</item>
        <item name="bpkTextHeading5Appearance">@style/bpkTextHeading5</item>
        <item name="bpkTextSubheadingAppearance">@style/bpkTextSubheading</item>
        <item name="bpkTextBodyLongformAppearance">@style/bpkTextBodyLongform</item>
        <item name="bpkTextBodyDefaultAppearance">@style/bpkTextBodyDefault</item>
        <item name="bpkTextLabel1Appearance">@style/bpkTextLabel1</item>
        <item name="bpkTextLabel2Appearance">@style/bpkTextLabel2</item>
        <item name="bpkTextLabel3Appearance">@style/bpkTextLabel3</item>
        <item name="bpkTextFootnoteAppearance">@style/bpkTextFootnote</item>
        <item name="bpkTextCaptionAppearance">@style/bpkTextCaption</item>
    </style>

    <!-- VDL2-14 Enhanced Typography Theme -->
    <style name="BpkTheme.Typography.Vdl214" parent="BpkTheme">
        <!-- Override standard text appearances with VDL2-14 enhanced styles -->
        <item name="bpkTextHero1Appearance">@style/bpkTextHero1Vdl</item>
        <item name="bpkTextHero2Appearance">@style/bpkTextHero2Vdl</item>
        <item name="bpkTextHero3Appearance">@style/bpkTextHero3Vdl</item>
        <item name="bpkTextHero4Appearance">@style/bpkTextHero4Vdl</item>
        <item name="bpkTextHero5Appearance">@style/bpkTextHero5Vdl</item>
        <item name="bpkTextHeading1Appearance">@style/bpkTextHeading1Vdl</item>
        <item name="bpkTextHeading2Appearance">@style/bpkTextHeading2Vdl</item>
        <item name="bpkTextHeading3Appearance">@style/bpkTextHeading3Vdl</item>
        <item name="bpkTextHeading4Appearance">@style/bpkTextHeading4Vdl</item>
        <item name="bpkTextHeading5Appearance">@style/bpkTextHeading5Vdl</item>
        
        <!-- Map body styles to appropriate VDL editorial styles -->
        <item name="bpkTextBodyDefaultAppearance">@style/bpkTextEditorial1Vdl</item>
        <item name="bpkTextBodyLongformAppearance">@style/bpkTextEditorial2Vdl</item>
        <item name="bpkTextSubheadingAppearance">@style/bpkTextEditorial3Vdl</item>
        
        <!-- Map label styles to appropriate VDL editorial styles -->
        <item name="bpkTextLabel1Appearance">@style/bpkTextEditorial4Vdl</item>
        <item name="bpkTextLabel2Appearance">@style/bpkTextEditorial5Vdl</item>
        <item name="bpkTextLabel3Appearance">@style/bpkTextEditorial6Vdl</item>
        
        <!-- Keep footnote and caption as VDL editorial styles -->
        <item name="bpkTextFootnoteAppearance">@style/bpkTextEditorial5Vdl</item>
        <item name="bpkTextCaptionAppearance">@style/bpkTextEditorial6Vdl</item>
    </style>

    <style name="BpkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">56dp</item>
    </style>

    <style name="BpkToolbarTheme">
        <item name="toolbarStyle">@style/BpkToolbarStyle.White</item>
        <item name="toolbarNavigationButtonStyle">@style/BpkToolbarNavigationButtonStyle.White</item>
    </style>

    <style name="BpkToolbarStyle.White" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="contentInsetStartWithNavigation">56dp</item>
        <item name="titleTextColor">@color/bpkTextPrimary</item>
        <item name="android:background">@color/bpkSurfaceDefault</item>
    </style>


    <style name="BpkToolbarNavigationButtonStyle.White" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/bpkTextPrimary</item>
    </style>
</resources>
