<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Bpk.badge" parent="android:Widget" />

  <style name="Bpk.button" parent="android:Widget" />

  <style name="Bpk.panel" parent="android:Widget">
    <item name="android:padding">@dimen/bpkSpacingSm</item>
    <item name="background">@drawable/border</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Bpk.card" parent="android:Widget">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Bpk.dialog.animation" parent="">
    <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
    <item name="android:windowExitAnimation">@anim/dialog_slide_out_down</item>
  </style>

  <style name="Bpk.chip" parent="android:Widget">
    <item name="android:textAppearance">@style/bpkTextSm</item>
  </style>
  <style name="Bpk.button.Primary">
    <item name="buttonBackground">@color/bpkGreen500</item>
    <item name="buttonTextColor">@color/bpkWhite</item>
    <item name="buttonStrokeColor">@android:color/transparent</item>
  </style>
</resources>
