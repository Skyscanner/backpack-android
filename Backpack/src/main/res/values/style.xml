<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BpkDefaultThemeColors">
    <item name="bpkPrimaryColor">@color/bpkBlue500</item>
    <item name="bpkGray50Color">@color/bpkGray50</item>
    <item name="bpkGray100Color">@color/bpkGray100</item>
    <item name="bpkGray300Color">@color/bpkGray300</item>
    <item name="bpkGray500Color">@color/bpkGray500</item>
    <item name="bpkGray700Color">@color/bpkGray700</item>
    <item name="bpkGray900Color">@color/bpkGray900</item>
  </style>

  <style name="Bpk.badge" parent="android:Widget" />

  <style name="Bpk.button" parent="android:Widget" />

  <style name="Bpk.panel" parent="android:Widget">
    <item name="android:padding">@dimen/bpkSpacingSm</item>
    <item name="background">@drawable/border</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Bpk.card" parent="android:Widget">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Bpk.dialog.animation" parent="">
    <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
    <item name="android:windowExitAnimation">@anim/dialog_slide_out_down</item>
  </style>

  <style name="Bpk.chip" parent="android:Widget">
    <item name="android:textAppearance">@style/bpkTextSm</item>
    <item name="chipSelectedBackgroundColor">@color/bpkBlue500</item>
  </style>
</resources>
