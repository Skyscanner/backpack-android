<?xml version="1.0" encoding="utf-8"?>
<resources>

  <attr name="bpkPrimaryColor" format="color" />
  <attr name="bpkThemeOverlay" format="reference" />

  <declare-styleable name="BpkBadge">
    <!-- type of badge -->
    <attr name="badgeType" format="enum">
      <enum name="success" value="1" />
      <enum name="warning" value="2" />
      <enum name="destructive" value="3" />
      <enum name="light" value="4" />
      <enum name="inverse" value="5" />
      <enum name="outline" value="6" />
      <enum name="dark" value="7" />
    </attr>
    <!-- message to be displayed -->
    <attr name="message" format="string" />
  </declare-styleable>

  <declare-styleable name="BpkText">
    <attr name="textStyle" format="enum">
      <enum name="xs" value="0" />
      <enum name="sm" value="1" />
      <enum name="base" value="2" />
      <enum name="lg" value="3" />
      <enum name="xl" value="4" />
      <enum name="xxl" value="5" />
      <enum name="xxxl" value="6" />
      <enum name="caps" value="7" />
    </attr>
    <!-- {@deprecated Use weight instead.} -->
    <attr name="emphasize" format="boolean" />
    <attr name="weight" format="enum">
      <enum name="normal" value="0" />
      <enum name="emphasized" value="1" />
      <enum name="heavy" value="2" />
    </attr>
    <attr name="drawableTint" format="reference" />
  </declare-styleable>

  <declare-styleable name="BpkPanel">
    <attr name="padding" format="boolean" />
  </declare-styleable>

  <declare-styleable name="BpkButton">
    <attr name="buttonType" format="enum">
      <enum name="primary" value="0" />
      <enum name="secondary" value="1" />
      <enum name="featured" value="2" />
      <enum name="destructive" value="3" />
      <enum name="outline" value="4" />
    </attr>
    <attr name="buttonIcon" format="reference" />
    <attr name="buttonIconPosition" format="enum">
      <enum name="start" value="0" />
      <enum name="end" value="1" />
      <enum name="icon_only" value="2" />
    </attr>
    <attr name="buttonBackgroundColor" format="color" />
    <attr name="buttonTextColor" format="color" />
    <attr name="buttonStrokeColor" format="color" />

  </declare-styleable>

  <declare-styleable name="BpkCardView">
    <attr name="focused" format="boolean" />
    <attr name="padded" format="boolean" />
    <attr name="cornerStyle" format="enum">
      <enum name="small" value="0" />
      <enum name="large" value="1" />
    </attr>
  </declare-styleable>

  <declare-styleable name="BpkSpinner">
    <attr name="small" format="boolean" />
    <attr name="type" format="enum">
      <enum name="primary" value="0" />
      <enum name="light" value="1" />
      <enum name="dark" value="2" />
    </attr>
    <attr name="spinnerColor" format="color" />
  </declare-styleable>

  <declare-styleable name="BpkChip">
    <attr name="disabled" format="boolean" />
    <attr name="selected" format="boolean" />
  </declare-styleable>

  <declare-styleable name="BpkSwitch">
    <attr name="switchPrimaryColor" format="color" />
  </declare-styleable>

  <attr name="bpkSwitchStyle" format="reference" />
  <attr name="bpkButtonSecondaryStyle" format="reference" />
  <attr name="bpkButtonPrimaryStyle" format="reference" />
  <attr name="bpkButtonFeaturedStyle" format="reference" />
  <attr name="bpkButtonDestructiveStyle" format="reference" />
  <attr name="bpkButtonOutlineStyle" format="reference" />
  <attr name="bpkSpinnerPrimaryStyle" format="reference" />

</resources>
