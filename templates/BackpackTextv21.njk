<resources>
  <declare-styleable name="BpkTextStyle">
    <attr name="android:fontFamily" />
    <attr name="android:textSize" />
  </declare-styleable>
{% for text in data %}
  <style name="{{text.name}}">
    <item name="android:fontFamily">{{text.fontFamily}}</item>
    <item name="android:textSize">{{text.size}}sp</item>
    <item name="android:letterSpacing">0.01</item>
    <item name="android:lineSpacingMultiplier">-0.0125</item>
  </style>
{% endfor %}
</resources>
