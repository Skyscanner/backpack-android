<resources>

  <!-- THIS FILE IS AUTO GENERATED. DO NOT MODIFY! -->

  <declare-styleable name="BpkTextStyle">
    <attr name="android:fontFamily" />
    <attr name="android:textSize" />
    <attr name="android:letterSpacing" />
  </declare-styleable>
{% for dimen in dimensions %}
  <dimen name="{{dimen.name}}">{{dimen.size}}sp</dimen>{% endfor %}
{% for text in data %}
  <style name="{{text.name}}">
    <item name="android:fontFamily">{{text.fontFamily}}</item>
    <item name="android:textColor">@color/bpkTextPrimary</item>
    <item name="android:textSize">{{text.size}}</item>
  </style>

  <style name="{{text.name}}Serif" parent="{{text.name}}">
    <item name="android:letterSpacing">{{text.letterSpacing}}</item>
  </style>
{% endfor %}
</resources>
