<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bpkSkyBlue</item>
    <item name="colorPrimaryDark">@color/bpkSkyBlueShade01</item>
    <item name="colorAccent">@color/bpkMonteverde</item>
    <item name="android:windowBackground">@color/bpkBackground</item>
    <item name="android:textAppearance">?bpkTextBaseAppearance</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="App.Story" parent="android:Widget">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:padding">@dimen/bpkSpacingBase</item>
  </style>

  <style name="TestRoundIconOnlyButton">
    <item name="buttonCornerRadius">4dp</item>
  </style>
</resources>
