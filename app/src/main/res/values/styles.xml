<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="BackpackTheme">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bpkBlue500</item>
    <item name="colorPrimaryDark">@color/bpkBlue700</item>
    <item name="colorAccent">@color/bpkGreen500</item>
    <item name="android:windowBackground">@color/bpkWhite</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="App.Story" parent="android:Widget">
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:padding">@dimen/bpkSpacingBase</item>
  </style>

  <style name="AppTheme.London" parent="BackpackTheme">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bpkRed500</item>
    <item name="colorPrimaryDark">@color/bpkRed700</item>
    <item name="colorAccent">@color/bpkBlue500</item>
    <item name="android:windowBackground">@color/bpkWhite</item>
    <item name="android:textAppearance">@style/AppTheme.London.TextBase</item>
    <item name="drawableTint">@color/bpkRed300</item>
    <item name="chipColor">@color/bpkRed500</item>
    <item name="chipRippleColor">@color/bpkRed800</item>
  </style>

  <style name="AppTheme.London.TextBase" parent="bpkTextCapsEmphasized">
    <item name="drawableTint">@color/bpkRed300</item>
    <item name="android:textColor">@color/bpkRed300</item>
  </style>

  <style name="AppTheme.London.Button.Primary" parent="Bpk.button.Primary">
    <item name="buttonBackground">@color/bpkRed500</item>
    <item name="buttonTextColor">@color/bpkWhite</item>
    <item name="buttonStrokeColor">@android:color/transparent</item>
  </style>

</resources>
