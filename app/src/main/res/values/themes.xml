<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- London theme start -->
  <style name="LondonTheme" parent="">
    <item name="bpkPrimaryColor">#002F61</item>
    <item name="colorPrimary">?bpkPrimaryColor</item>

    <item name="bpkSwitchStyle">@style/LondonThemeBpkSwitch</item>
    <item name="bpkButtonPrimaryStyle">@style/LondonThemeButtonPrimary</item>
    <item name="bpkButtonSecondaryStyle">@style/LondonThemeButtonSecondary</item>
    <item name="bpkChipStyle">@style/LondonThemeChip</item>
    <item name="bpkSpinnerPrimaryStyle">@style/LondonThemeSpinnerPrimary</item>
    <item name="bpkTextStyle">@style/LondonThemeText</item>
    <item name="bpkCalendarStyle">@style/LondonThemeCalendar</item>

    <item name="bpkPrimaryGradientColorStart">?bpkPrimaryColor</item>
    <item name="bpkPrimaryGradientColorEnd">#002E61</item>

    <item name="bpkGray50Color">#BABBC4</item>
    <item name="bpkGray100Color">#ACADB9</item>
    <item name="bpkGray300Color">#ACADB9</item>
    <item name="bpkGray500Color">#9FA0AD</item>
    <item name="bpkGray700Color">#9192A1</item>
    <item name="bpkGray900Color">#838595</item>
  </style>

  <style name="LondonThemeText">
    <item name="fontFamilyBase">@font/shadows_into_light</item>
    <item name="fontFamilyHeavy">@font/shadows_into_light</item>
    <item name="fontFamilyEmphasized">@font/shadows_into_light</item>
  </style>

  <style name="LondonThemeBpkSwitch" parent="">
    <item name="switchPrimaryColor">#ED1B28</item>
  </style>

  <style name="LondonThemeButtonPrimary">
    <item name="buttonBackgroundColor">#002F61</item>
    <item name="buttonTextColor">@color/bpkWhite</item>
    <item name="buttonCornerRadius">@dimen/bpkSpacingMd</item>
    <item name="buttonAddElevation">true</item>
  </style>
  <style name="LondonThemeButtonSecondary">
    <item name="buttonBackgroundColor">@color/bpkWhite</item>
    <item name="buttonCornerRadius">@dimen/bpkSpacingMd</item>
    <item name="buttonTextColor">#ED1B28</item>
    <item name="buttonStrokeColor">#5E072C</item>
    <item name="buttonAddElevation">true</item>
  </style>

  <style name="LondonThemeChip">
    <item name="chipSelectedBackgroundColor">?bpkPrimaryColor</item>
  </style>

  <style name="LondonThemeSpinnerPrimary">
    <item name="spinnerColor">?bpkPrimaryColor</item>
  </style>

  <style name="LondonThemeCalendar">
    <item name="calendarDateSelectedBackgroundColor">#D11622</item>
    <item name="calendarDateSelectedRangeBackgroundColor">#ED1B28</item>
    <item name="calendarDateSelectedTextColor">@color/bpkWhite</item>
  </style>
  <!-- London theme end -->


  <!-- Doha theme start -->
  <style name="DohaTheme" parent="">
    <item name="bpkPrimaryColor">#ffb300</item>
    <item name="colorPrimary">?bpkPrimaryColor</item>

    <item name="bpkSwitchStyle">@style/DohaThemeBpkSwitch</item>
    <item name="bpkButtonPrimaryStyle">@style/DohaThemeButtonPrimary</item>
    <item name="bpkButtonSecondaryStyle">@style/DohaThemeButtonSecondary</item>
    <item name="bpkChipStyle">@style/DohaThemeChip</item>
    <item name="bpkSpinnerPrimaryStyle">@style/DohaThemeSpinnerPrimary</item>
    <item name="bpkTextStyle">@style/DohaThemeText</item>
    <item name="bpkCalendarStyle">@style/DohaThemeCalendar</item>

    <item name="bpkPrimaryGradientColorStart">?bpkPrimaryColor</item>
    <item name="bpkPrimaryGradientColorEnd">#ffb600</item>

    <item name="bpkGray50Color">#BABBC4</item>
    <item name="bpkGray100Color">#ACADB9</item>
    <item name="bpkGray300Color">#ACADB9</item>
    <item name="bpkGray500Color">#9FA0AD</item>
    <item name="bpkGray700Color">#9192A1</item>
    <item name="bpkGray900Color">#838595</item>
  </style>

  <style name="DohaThemeBpkSwitch" parent="">
    <item name="switchPrimaryColor">@color/bpkYellow900</item>
  </style>

  <style name="DohaThemeText" >
    <item name="fontFamilyBase">@font/shadows_into_light</item>
    <item name="fontFamilyHeavy">@font/shadows_into_light</item>
    <item name="fontFamilyEmphasized">@font/shadows_into_light</item>
  </style>

  <style name="DohaThemeButtonPrimary">
    <item name="buttonBackgroundColor">#ffb300</item>
    <item name="buttonTextColor">@color/bpkWhite</item>
    <item name="buttonCornerRadius">@dimen/bpkSpacingMd</item>
    <item name="buttonAddElevation">true</item>
  </style
    >
  <style name="DohaThemeButtonSecondary">
    <item name="buttonBackgroundColor">@color/bpkWhite</item>
    <item name="buttonTextColor">#9B104C</item>
    <item name="buttonStrokeColor">#B1121C</item>
    <item name="buttonCornerRadius">@dimen/bpkSpacingMd</item>
    <item name="buttonAddElevation">true</item>
  </style>

  <style name="DohaThemeSpinnerPrimary">
    <item name="spinnerColor">?bpkPrimaryColor</item>
  </style>

  <style name="DohaThemeCalendar">
    <item name="calendarDateSelectedBackgroundColor">#7F083B</item>
    <item name="calendarDateSelectedRangeBackgroundColor">#9B104C</item>
    <item name="calendarDateSelectedTextColor">@color/bpkWhite</item>
  </style>

  <style name="DohaThemeChip">
    <item name="chipSelectedBackgroundColor">?bpkPrimaryColor</item>
  </style>
  <!-- Doha theme end -->

</resources>
