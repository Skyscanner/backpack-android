<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/App.Story">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/normal_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeType="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_normal" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/normal_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_tick_circle_sm"
                app:badgeType="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_normal" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/strong_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeType="strong"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_strong"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_strong" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/strong_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_tick_circle_sm"
                app:badgeType="strong"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/guideline_strong"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_strong" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/success_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_tick_circle_sm"
                app:badgeType="success"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/guideline_success"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_success" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/warning_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_help_circle_sm"
                app:badgeType="warning"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline_warning"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_warning" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_destructive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/destructive_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_close_circle_sm"
                app:badgeType="destructive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/guideline_destructive"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_destructive" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:background="@color/bpkCorePrimary"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/inverse_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeType="inverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_inverse"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_inverse" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/inverse_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_tick_circle_sm"
                app:badgeType="inverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/guideline_inverse"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_inverse" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bpkSpacingSm"
            android:background="@color/bpkCorePrimary"
            android:orientation="horizontal"
            android:padding="@dimen/bpkSpacingSm">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/outline_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeType="outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_outline"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_outline" />

            <net.skyscanner.backpack.badge.BpkBadge
                android:id="@+id/outline_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:badgeIcon="@drawable/bpk_tick_circle_sm"
                app:badgeType="outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/guideline_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:message="@string/badge_outline" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</RelativeLayout>
