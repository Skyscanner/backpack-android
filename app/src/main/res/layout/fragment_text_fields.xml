<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/App.Story"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/bpkBackgroundSecondary"
  android:orientation="vertical">

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input empty" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input empty"
    app:textFieldIconStart="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input empty"
    android:text="Input filled"
    app:textFieldIconStart="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input with icon end"
    app:textFieldIconEnd="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input disabled"
    android:enabled="false"/>

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input empty RTL"
    android:layoutDirection="rtl"
    app:textFieldIconStart="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input empty RTL"
    android:layoutDirection="rtl"
    android:text="Input filled RTL"
    app:textFieldIconStart="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:hint="Input with icon end RTL"
    android:layoutDirection="rtl"
    app:textFieldIconEnd="@drawable/bpk_search" />

  <net.skyscanner.backpack.text.BpkTextField
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bpkSpacingBase"
    android:layoutDirection="rtl"
    android:hint="Input disabled RTL"
    android:enabled="false"/>

</LinearLayout>
