<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/App.Story"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <net.skyscanner.backpack.text.BpkText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        android:text="Standard"
        app:textStyle="footnote" />

    <net.skyscanner.backpack.slider.BpkSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Standard slider"
        android:value="50.0"
        android:valueTo="100.0" />

    <net.skyscanner.backpack.text.BpkText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        android:text="Stepped"
        app:textStyle="footnote" />

    <net.skyscanner.backpack.slider.BpkSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Stepped slider"
        android:stepSize="10.0"
        android:value="50.0"
        android:valueTo="100.0" />

    <net.skyscanner.backpack.text.BpkText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        android:text="Formatted"
        app:textStyle="footnote" />

    <net.skyscanner.backpack.slider.BpkSlider
        android:id="@+id/formatted_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Formatted slider"
        android:stepSize="10.0"
        android:value="3000.0"
        android:valueFrom="1000.0"
        android:valueTo="5000.0" />

    <net.skyscanner.backpack.text.BpkText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingMd"
        android:text="Range"
        app:textStyle="footnote" />

    <net.skyscanner.backpack.slider.BpkSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Range slider"
        android:stepSize="1.0"
        android:valueTo="100.0"
        app:values="@array/initial_slider_values" />

</LinearLayout>
