<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/App.Story"
  android:layout_gravity="center"
  android:orientation="vertical">

  <net.skyscanner.backpack.text.BpkText
    android:layout_width="wrap_content"
    app:weight="emphasized"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/bpkSpacingMd"
    android:text="Small"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/bpkSpacingMd"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_width="16dp"
      app:tint="@color/bpkTextPrimary"
      android:layout_margin="@dimen/bpkSpacingSm"
      app:srcCompat="@drawable/bpk_flight"
      android:layout_height="16dp"/>
    <ImageView
      android:layout_width="16dp"
      app:srcCompat="@drawable/bpk_cars"
      app:tint="@color/bpkTextPrimary"
      android:layout_margin="@dimen/bpkSpacingSm"
      android:layout_height="16dp"/>
    <ImageView
      android:layout_width="16dp"
      app:srcCompat="@drawable/bpk_hotels"
      app:tint="@color/bpkTextPrimary"
      android:layout_margin="@dimen/bpkSpacingSm"
      android:layout_height="16dp"/>
  </LinearLayout>

  <net.skyscanner.backpack.text.BpkText
    app:weight="emphasized"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/bpkSpacingMd"
    android:layout_height="wrap_content"
    android:text="Large"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"

    android:layout_height="wrap_content">
    <ImageView
      android:layout_width="wrap_content"
      app:tint="@color/bpkTextPrimary"
      app:srcCompat="@drawable/bpk_flight"
      android:padding="@dimen/bpkSpacingMd"

      android:layout_height="wrap_content"/>
    <ImageView
      android:layout_width="wrap_content"
      app:srcCompat="@drawable/bpk_cars"
      app:tint="@color/bpkTextPrimary"
      android:padding="@dimen/bpkSpacingMd"

      android:layout_height="wrap_content"/>
    <ImageView
      android:layout_width="wrap_content"
      app:tint="@color/bpkTextPrimary"
      app:srcCompat="@drawable/bpk_hotels"
      android:padding="@dimen/bpkSpacingMd"

      android:layout_height="wrap_content"/>
  </LinearLayout>
  <net.skyscanner.backpack.text.BpkText
    app:weight="emphasized"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/bpkSpacingMd"
    android:layout_height="wrap_content"
    android:text="In color"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/bpkSpacingSm"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_width="wrap_content"
      app:tint="@color/bpkPrimary"
      app:srcCompat="@drawable/bpk_flight"
      android:padding="@dimen/bpkSpacingMd"
      android:layout_height="wrap_content"/>
    <ImageView
      android:layout_width="wrap_content"
      app:srcCompat="@drawable/bpk_cars"
      app:tint="@color/bpkMonteverde"
      android:padding="@dimen/bpkSpacingMd"
      android:layout_height="wrap_content"/>
    <ImageView
      android:layout_width="wrap_content"
      app:srcCompat="@drawable/bpk_hotels"
      android:padding="@dimen/bpkSpacingMd"
      app:tint="@color/bpkErfoud"
      android:layout_height="wrap_content"/>
  </LinearLayout>
</LinearLayout>
