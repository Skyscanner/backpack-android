<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App.Story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.skyscanner.backpack.checkbox.BpkCheckbox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingLg"
        android:text="@string/toggle_default_unchecked" />

    <net.skyscanner.backpack.checkbox.BpkCheckbox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingLg"
        android:checked="true"
        android:text="@string/toggle_default_checked" />

    <net.skyscanner.backpack.checkbox.BpkCheckbox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingLg"
        android:enabled="false"
        android:text="@string/toggle_disabled_unchecked" />

    <net.skyscanner.backpack.checkbox.BpkCheckbox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingLg"
        android:checked="true"
        android:enabled="false"
        android:text="@string/toggle_disabled_checked" />

    <net.skyscanner.backpack.checkbox.BpkCheckbox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bpkSpacingLg"
        android:layoutDirection="rtl"
        android:text="@string/toggle_default_rtl" />

</LinearLayout>
